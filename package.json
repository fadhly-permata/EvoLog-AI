{
	"name": "evolog-ai",
	"displayName": "EvoLog AI",
	"description": "EvoLog AI is a powerful Visual Studio Code extension that generates professional changelog entries using AI through Ollama.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.109.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "evolog-ai.helloWorld",
				"title": "EvoLog-AI: Hello World"
			},
			{
				"command": "evolog-ai.generateCommitMessage",
				"title": "EvoLog-AI: Commit Message Generator",
				"icon": "$(lightbulb)"
			}
		],
		"menus": {
			"scm/title": [
				{
					"command": "evolog-ai.generateCommitMessage",
					"group": "navigation",
					"when": "scmProvider == git"
				}
			]
		}
	},
	"icon": "src/assets/evo.png",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.109.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "22.x",
		"typescript-eslint": "^8.54.0",
		"eslint": "^9.39.2",
		"typescript": "^5.9.3",
		"@vscode/test-cli": "^0.0.12",
		"@vscode/test-electron": "^2.5.2"
	}
}